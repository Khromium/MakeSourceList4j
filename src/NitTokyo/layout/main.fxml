<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<VBox fx:id="mainpage" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0"
      minWidth="700.0" prefHeight="461.0" prefWidth="600.0" style="-fx-background-color: #ECEFF1;"
      xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NitTokyo.Controller">
    <children>
        <ToolBar maxHeight="56.0" maxWidth="1.7976931348623157E308" minHeight="56.0" prefHeight="56.0"
                 style="-fx-background-color: #2196F3;">
            <Pane prefHeight="56.0" prefWidth="245.0">
                <children>
                    <Label layoutX="34.0" layoutY="17.0" lineSpacing="8.0" text="ソースリスト作るよ" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                </children>
            </Pane>
        </ToolBar>
        <VBox layoutX="51.0" layoutY="63.0" prefHeight="156.0" prefWidth="652.0">

            <children>

                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                    <Button fx:id="picker" minWidth="90.0" onAction="#buttonsHandler"
                            style="-fx-background-color: #9C27B0;" text="ファイル選択…" textFill="WHITE"/>

                    <Button fx:id="folderPicker" minWidth="90.0" onAction="#buttonsHandler"
                            style="-fx-background-color: #3F51B5;" text="ファイル再帰選択…" textFill="WHITE">

                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Button>

                    <Label fx:id="currentDir" text="ぱすだお">
                        <VBox.margin>
                            <Insets top="20.0"/>
                        </VBox.margin>
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="200.0">
                    <Label text="選択済みファイル">
                        <VBox.margin>
                            <Insets top="20.0"/>
                        </VBox.margin>
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </Label>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>

                </HBox>

                <ListView fx:id="fileList" minHeight="150.0" prefHeight="176.0" prefWidth="668.0"
                          style="-fx-background-color: #DDDDDD;"/>

                <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="200.0">
                    <Button fx:id="clear" layoutX="616.0" style="-fx-background-color: #FCFCFC;" layoutY="107.0"
                            onAction="#buttonsHandler" text="クリア"
                            textAlignment="RIGHT"/>
                </VBox>

                <HBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0">
                    <Button fx:id="generate" minWidth="100.0" onAction="#buttonsHandler"
                            style="-fx-background-color: #F44336;" text="作成スタート！！" textFill="WHITE"/>


                </HBox>
            </children>
            <opaqueInsets>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </opaqueInsets>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>

            <Label text="作成ボタンを押してください..." fx:id="geneLog"/>
        </VBox>
    </children>
</VBox>
